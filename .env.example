# Riqueza Electric - Backend Environment Variables
# Copy this file to .env for local development

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=riqueza_db
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Configuration (IMPORTANT: Use a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-generate-a-secure-one
JWT_EXPIRES_IN=7d

# Twilio Configuration (Optional - only if using SMS/OTP features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
